{
  "$schema": "http://json.schemastore.org/template",
  "author": "christiandr",
  "classifications": [
    "Web",
    "API",
    "Clean Architecture",
    "template",
    "Fast Clean Architecture"
  ],
  "name": "Fast Clean Architecture Solution",
  "defaultName": "FastCleanArchitecture",
  "description": "A Clean Architecture Solution Template for creating a API Rest with .Net",
  "identity": "Fast.Clean.Architecture.Solution.CSharp",
  "groupIdentity": "Fast.Clean.Architecture.Solution",
  "shortName": "fast-ca-sln",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "FastCleanArchitecture",
  "preferNameDirectory": true,
  "symbols": {
    "UseOracle": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Whether to use Oracle instead of LocalDB."
    },
    "UseLocalDB": {
      "type": "computed",
      "value": "(!UseOracle)"
    },
    "UseController": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Use controller instead of minimals APIs."
    },
    "UseMinimalApis": {
      "type": "computed",
      "value": "(!UseController)"
    },
    "fcaRepositoryUrl": {
      "type": "generated",
      "generator": "constant",
      "replaces": "fcaRepositoryUrl",
      "parameters": {
        "value": "https://github.com/christianrd/FastCleanArchitecture"
      }
    },
    "fcaPackageVersion": {
      "type": "generated",
      "generator": "constant",
      "replaces": "fcaPackageVersion",
      "parameters": {
        "value": "8.0.1"
      }
    }
  },
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        ".template.config/**/*",
        "templates/**/*",
        "**/*.filelist",
        "**/*.user",
        "**/*.lock.json",
        "*.nuspec",
        "**/[Bb]in/**",
        "**/[Oo]bj/**",
        ".vs/**/*",
        ".idea/**/*",
        "**/.git/**",
        "**/azure-pipelines.yml",
        "README.md",
        "**/.github/**"
      ],
      "rename": {
        "README-template.md": "README.md"
      },
      "modifiers": [
        {
          "condition": "(UseLocalDB)",
          "exclude": [
            "src/Infrastructure/Data/OracleMigrations/**",
            "src/API/appsettings.Oracle.json"
          ]
        },
        {
          "condition": "(UseOracle)",
          "exclude": [
            "src/Infrastructure/Data/Migrations/**",
            "src/API/appsettings.json"
          ],
          "rename": {
            "src/Infrastructure/Data/OracleMigrations/": "src/Infrastructure/Data/Migrations/",
            "appsettings.Oracle.json": "appsettings.json"
          }
        },
        {
          "condition": "(UseMinimalApis)",
          "exclude": [
            "src/API/Controllers/**",
            "src/API/Infrastructure/ApiServiceCollectionExtensions"
          ]
        },
        {
          "condition": "(UseController)",
          "exclude": [
            "src/API/Endpoints/**",
            "src/API/Infrastructure/EndpointGroupBase.cs",
            "src/API/Infrastructure/EndpointRouteBuilderExtensions"
          ]
        }
      ]
    }
  ]
}